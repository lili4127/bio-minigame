#:include layouts/lb.kv
#:include layouts/cell.kv

<MenuScreen>:
    MenuLayout:
        rows: 4
        AnchorLayout: 
            anchor_x: 'center'
            anchor_y: 'center'
            Label:
                text: 'Cell Memorization'
        Button:
            text: 'Start'
            size_hint: 1, .3
        Button: 
            text: 'Leaderboard'
            on_press: root.manager.current = 'lb'
            size_hint: 1, .3

<MenuLayout>:
    canvas:
        Color:
            rgb: [0,0,1]
        Rectangle:
            pos: self.pos
            size: self.size