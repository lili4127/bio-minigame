<MenuLayout>: 
    rows: 4

    AnchorLayout: 
        anchor_x: 'center'
        anchor_y: 'bottom'

        canvas: 
            Color: 
                rgb: [.5, .324, .384] 
            Rectangle: 
                pos: self.pos 
                size: self.size 
<MenuScreen>:
    MenuLayout:
        Button: 
            text: 'Leaderboard'
            on_press: root.manager.current = 'lb'
            size_hint: .3, .3

<LeaderboardScreen>:
    BoxLayout:
        text: 'Leaderboard'
        Button:
            text: 'Menu'
            on_press: root.manager.current = 'menu'